<header class = 'topstuff'> <h1> BLOGGY <h1></header>
<h1>Listing Articles</h1>
<script>
$(document).ready(function(){ 		//when document is ready aka when the page has loaded
	console.log("ready");				
$('#jean').click(function(e){		//Then perform this function
	e.preventDefault();
	$.ajax({
		url: "/articles/2",
		success: function(article){
			$('#result').html(article);
		}
	})
	console.log("foo");
});
});
</script>
<%= link_to 'Show', @articles.first, id: 'jean' %>
 <%= link_to 'New Article', new_article_path %>
 
 <section id='box'>
 
 <ul id= "sortable1">
	 <% @articles.each do |article| %>
   <li class="ui-state-default"> <%= article.title %> </li>
   <li class="ui-state-default"><%= article.text %></li>
   <% end %>
   
 </ul>
</section>
